<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#ff558b2f"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/bannernew"
        android:scaleType="centerCrop" />
    <ImageView
        android:padding="15.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="200.0dip"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true" />
    <ImageView
        android:padding="8.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80.0dip"
        android:layout_alignParentBottom="true" />
    <TextView
        android:textSize="11.0sp"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:background="#114e17"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:text="Â© Copyright 2016 AnnamAgroTech.\nAll Rights Reserved."
        android:layout_alignParentBottom="true" />
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/pnl_login_panel"
        android:background="#00e6bf1c"
        android:padding="20.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true">
        <EditText
            android:textSize="14.0sp"
            android:textColor="#ff777777"
            android:id="@+id/edt_email_phone"
            android:background="@drawable/res_edittextex_bg"
            android:padding="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:layout_marginBottom="10.0dip"
            android:hint="Mobile Number"

            android:drawableLeft="@drawable/img_mobile"
            android:drawablePadding="5.0dip"
            android:inputType="phone" />
        <EditText
            android:textSize="14.0sp"
            android:textColor="#ff777777"
            android:id="@+id/edt_passsword"
            android:background="@drawable/res_edittextex_bg"
            android:padding="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:hint="Password"
            android:maxLength="50"
            android:drawableLeft="@drawable/img_lock"
            android:drawablePadding="5.0dip"
            android:inputType="textPassword" />
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <Button
                    android:textColor="#ffffffff"
                    android:background="@drawable/res_buttonex_bg"
                    android:padding="10.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:id="@+id/btn_login"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:text="LOGIN" />
                <Button
                    android:textColor="#ffffffff"
                    android:background="@drawable/res_buttonex_bg"
                    android:padding="10.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:id="@+id/btn_signup"
                    android:layout_width="0.0dip"
                    android:layout_weight="1.0"
                    android:layout_height="fill_parent"
                    android:text="Signup" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:layout_marginBottom="20.0dip">
            <TextView
                android:textColor="#ffffffff"
                android:id="@+id/forgot_txt_forgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password"
                android:layout_alignParentLeft="true" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>