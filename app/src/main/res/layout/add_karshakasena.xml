<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/colorPrimary"
        android:gravity="start|center_horizontal"

        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:id="@+id/backClick"
            android:padding="5dp"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center"
            android:gravity="center"
            android:text="Add Karshakasena"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
android:background="#f4f1f1"
        android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"

                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                   >

                    <com.annam.annamownernew.customfonts.MyTextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="start"
                        android:text="Job Title "
android:layout_margin="3dp"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >


                        <com.annam.annamownernew.customfonts.MyEditText
                            android:id="@+id/job_title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawablePadding="12dp"
                            android:gravity="left"
                            android:hint="Tittle"
                            android:background="@color/white"
                            android:padding="16dp"
                            android:textColor="@color/colortext"
                            android:textColorHint="@color/colorhint"
                            android:textSize="16dp"
                            />


                    </LinearLayout>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                  >

                    <com.annam.annamownernew.customfonts.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="start" android:layout_margin="3dp"
                        android:text="Nature of work "
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent"
                       >


                        <com.annam.annamownernew.customfonts.MyEditText
                            android:id="@+id/ed_nature"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                        

android:visibility="gone"

                            android:drawablePadding="12dp"
                            android:gravity="left"

                            android:padding="16dp"
                            android:background="@color/white"
                            android:textColor="@color/colortext"
                            android:textColorHint="@color/colorhint"
                            android:textSize="16dp"
                            android:hint=" Short Desc "
                            android:minHeight="100dp"
                           />




                        <com.jaredrummler.materialspinner.MaterialSpinner
                            android:id="@+id/spinner"
                         android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="3dp"
                   >

                    <com.annam.annamownernew.customfonts.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="start|center_vertical"
                        android:text="Radius " android:layout_margin="3dp"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >


                        <com.annam.annamownernew.customfonts.MyEditText
                            android:id="@+id/ed_radious"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:digits="1234567890."

                            android:hint=" km "
                            android:background="@color/white"
                            android:inputType="number"

                            android:drawablePadding="12dp"
                            android:gravity="left"

                            android:padding="16dp"
                            android:textColor="@color/colortext"
                            android:textColorHint="@color/colorhint"
                            android:textSize="16dp"
                          />


                    </LinearLayout>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="3dp"
                  >

                    <com.annam.annamownernew.customfonts.MyTextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_margin="3dp"


                        android:gravity="start|center_vertical"
                        android:text="No of labours "
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >


                        <com.annam.annamownernew.customfonts.MyEditText
                            android:id="@+id/ed_labours"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:digits="1234567890."

                            android:hint="No"
                            android:inputType="number"

                            android:background="@color/white"
                            android:drawablePadding="12dp"
                            android:gravity="left"

                            android:padding="16dp"
                            android:textColor="@color/colortext"
                            android:textColorHint="@color/colorhint"
                            android:textSize="16dp"

                            />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="3dp"
                    >

                    <com.annam.annamownernew.customfonts.MyTextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_margin="3dp"


                        android:gravity="start|center_vertical"
                        android:text="Rate"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >


                        <com.annam.annamownernew.customfonts.MyEditText
                            android:id="@+id/rates_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:digits="1234567890."

                            android:hint="Rate"
                            android:inputType="number"

                            android:background="@color/white"
                            android:drawablePadding="12dp"
                            android:gravity="left"

                            android:padding="16dp"
                            android:textColor="@color/colortext"
                            android:textColorHint="@color/colorhint"
                            android:textSize="16dp"

                            />


                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:gravity="center">


        <Button
            android:id="@+id/add_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="SAVE" />

    </LinearLayout>
</RelativeLayout>

</LinearLayout>