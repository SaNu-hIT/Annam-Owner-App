<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#f4f1f1"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:gravity="center|start"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:onClick="addMachine"
            android:layout_margin="5dp"
            android:layout_height="?android:actionBarSize"
            />

        <com.annam.annamownernew.customfonts.MyTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center|start"
            android:text="Add New Machine"

            android:textColor="#fefffe"
            android:textStyle="bold" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="4dp"
            android:scrollbars="none"
            android:layout_above="@id/save_button"
            android:layout_marginRight="4dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:padding="3dp"
                   >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                       >

                        <com.annam.annamownernew.customfonts.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start|center_vertical"
                            android:text="Machine Type"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >

                        <Spinner
                            android:id="@+id/spinner"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:drawablePadding="12dp"
                            android:gravity="left"

                            android:padding="16dp"
                            android:textColor="@color/colortext"
                            android:textColorHint="@color/colorhint"
                            android:textSize="16dp"/>
                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical"
                    android:padding="3dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <com.annam.annamownernew.customfonts.MyTextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="start|center_vertical"
                            android:text="Machine"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                       >

                        <Spinner
                            android:id="@+id/spinner2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:background="@color/white"
                            android:drawablePadding="12dp"
                            android:gravity="left"

                            android:padding="16dp"
                            android:textColor="@color/colortext"
                            android:textColorHint="@color/colorhint"
                            android:textSize="16dp"/>
                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    android:padding="3dp"
                   >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2">

                        <com.annam.annamownernew.customfonts.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|start"
                            android:text="Machine No"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                    >

                        <com.annam.annamownernew.customfonts.MyEditText
                            android:id="@+id/mac_no"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:drawablePadding="12dp"
                            android:gravity="left"

                            android:padding="16dp"
                            android:textColor="@color/colortext"
                            android:textColorHint="@color/colorhint"
                            android:textSize="16dp"
                            />
                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/specificatns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp">

                        <com.annam.annamownernew.customfonts.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|start"
                            android:text="Specifications"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"

                        android:layout_marginRight="10dp"
                        android:orientation="vertical">

                        <com.annam.annamownernew.customfonts.MyEditText
                            android:id="@+id/specificatn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Specs 1"
                            android:background="@color/white"
                            android:drawablePadding="12dp"
                            android:gravity="left"

                            android:padding="16dp"
                            android:textColor="@color/colortext"
                            android:textColorHint="@color/colorhint"
                            android:textSize="16dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="3dp"
                           android:visibility="gone" android:layout_marginLeft="50dp"
                            android:layout_marginRight="50dp"
                            android:layout_marginTop="3dp"
                            android:background="#9e9e9e" />


                        <com.annam.annamownernew.customfonts.MyEditText
                            android:id="@+id/specificatn2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Specs 2"
                            android:background="@color/white"
                            android:drawablePadding="12dp"
                            android:gravity="left"

                            android:padding="16dp"
                            android:textColor="@color/colortext"
                            android:textColorHint="@color/colorhint"
                            android:textSize="16dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="3dp"
                       android:visibility="gone"     android:layout_marginLeft="50dp"
                            android:layout_marginRight="50dp"
                            android:layout_marginTop="3dp"
                            android:background="#9e9e9e" />

                        <com.annam.annamownernew.customfonts.MyEditText
                            android:id="@+id/specificatn3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Specs 3"
                            android:background="@color/white"
                            android:drawablePadding="12dp"
                            android:gravity="left"

                            android:padding="16dp"
                            android:textColor="@color/colortext"
                            android:textColorHint="@color/colorhint"
                            android:textSize="16dp"
                           />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    android:background="#9e9e9e" />

                <Spinner
                    android:id="@+id/v_f_d_status"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="8dp"
                    android:padding="3dp">

                </Spinner>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:weightSum="1">


                    <LinearLayout
                        android:id="@+id/layout_rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="5dp"

                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp">

                                <com.annam.annamownernew.customfonts.MyTextView
                                    android:id="@+id/rateper_day"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="Rate Per Day"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="5dp">

                                <com.annam.annamownernew.customfonts.MyEditText
                                    android:id="@+id/rate_per_day"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:gravity="center"
                                    android:hint="rate/day"
                                    android:inputType="number"
                                    android:background="@color/white"
                                    android:drawablePadding="12dp"


                                    android:padding="16dp"
                                    android:textColor="@color/colortext"
                                    android:textColorHint="@color/colorhint"
                                    android:textSize="16dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp">

                                <com.annam.annamownernew.customfonts.MyTextView
                                    android:id="@+id/rate_per_hours"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"

                                    android:text="Rate Per Hour"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp">

                                <com.annam.annamownernew.customfonts.MyEditText
                                    android:id="@+id/rate_per_hour"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:gravity="center"
                                    android:hint="rate/hour"
                                    android:inputType="number"


                                    android:background="@color/white"
                                    android:drawablePadding="12dp"

                                    android:padding="16dp"
                                    android:textColor="@color/colortext"
                                    android:textColorHint="@color/colorhint"
                                    android:textSize="16dp"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/layout_tree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <com.annam.annamownernew.customfonts.MyTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.8"
                                android:gravity="center"
                                android:text="Rate per tree to climb"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <com.annam.annamownernew.customfonts.MyEditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:background="@drawable/book_a_service_bg"
                                android:gravity="center"
                                android:hint="rate/tree"
                                android:padding="6dp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <com.annam.annamownernew.customfonts.MyTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.8"
                                android:gravity="center"
                                android:text="Rate per tree to clean"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <com.annam.annamownernew.customfonts.MyEditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:background="@drawable/book_a_service_bg"
                                android:gravity="center"
                                android:hint="rate/tree"
                                android:padding="6dp" />

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/Layout_kilo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:visibility="gone"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center">

                            <com.annam.annamownernew.customfonts.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text=" Rate in kg "
                                android:textSize="20sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">


                            <com.annam.annamownernew.customfonts.MyEditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/book_a_service_bg"
                                android:digits="1234567890."
                                android:gravity="center"
                                android:hint=" kg "
                                android:inputType="number"
                                android:padding="5dp" />


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <com.annam.annamownernew.customfonts.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="Till where will you provide your services?"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="2">

                            <CheckBox
                                android:id="@+id/cb_panchayath"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif"
                                android:text="Panchyath" />


                            <CheckBox
                                android:id="@+id/cb_block"
                                android:layout_width="0dp"       android:fontFamily="sans-serif"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Block" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.annam.annamownernew.customfonts.MyEditText
                                android:id="@+id/radios"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Radious"
                                android:background="@color/white"

                               android:layout_weight="1"
android:padding="16dp"

                                android:textColor="@color/colortext"
                                android:textColorHint="@color/colorhint"
                               />

                            <CheckBox
                                android:id="@+id/cb_district"
                                android:layout_width="0dp"
android:visibility="gone"
                                android:layout_height="wrap_content"       android:fontFamily="sans-serif"

                                android:text="District" />


                            <CheckBox
                                android:id="@+id/cb_anywhere"
                                android:layout_width="match_parent"       android:fontFamily="sans-serif"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Anywhere" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>




                <LinearLayout
                    android:id="@+id/pickup_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    android:weightSum="3">

                    <com.annam.annamownernew.customfonts.MyTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.8"
                        android:gravity="start|center_vertical"
                        android:text="PICKUP REQUIRED?"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <CheckBox
                            android:id="@+id/cb_pickup_yes"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"       android:fontFamily="sans-serif"
                            android:text="YES"
                            android:textSize="16sp" />

                        <CheckBox
                            android:id="@+id/cb_pickup_no"
                            android:layout_width="0dp"       android:fontFamily="sans-serif"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="NO"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_transportaion_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical"
                    android:padding="3dp"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:weightSum="3">

                        <com.annam.annamownernew.customfonts.MyTextView
                            android:id="@+id/textView5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="start|center_vertical"
                            android:text=" Transportation Rate "
                            android:textSize="20sp"
                            android:textStyle="bold" />


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">


                            <com.annam.annamownernew.customfonts.MyEditText
                                android:id="@+id/ed_transport_rate"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:digits="1234567890."
                                android:gravity="center"
                                android:hint=" rate/km "
                                android:inputType="number"

                                android:background="@color/white"
                                android:drawablePadding="12dp"


                                android:padding="16dp"
                                android:textColor="@color/colortext"
                                android:textColorHint="@color/colorhint"
                                android:textSize="16dp"/>


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
        </ScrollView>




    </LinearLayout>




    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">


            <Button
                android:id="@+id/save_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:background="@color/colorPrimary"
                android:gravity="center"

                android:text="SAVE" />

        </LinearLayout>
</RelativeLayout>
</LinearLayout>