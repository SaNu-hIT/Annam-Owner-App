<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
         android:gravity="right|center"
            android:padding="20dp">

            <com.annam.annamownernew.customfonts.MyTextView
                android:id="@+id/tripTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bill"
               android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#1c1d1c"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="40dp">

                <com.annam.annamownernew.customfonts.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                 android:gravity="right|center"
                    android:text="Booking ID"
                          android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.annam.annamownernew.customfonts.MyTextView
                    android:id="@+id/bill_bookingid"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Booking ID"
                    android:padding="10dp" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="40dp">

                <com.annam.annamownernew.customfonts.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center"
                    android:text="Location"
                          android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.annam.annamownernew.customfonts.MyTextView
                    android:id="@+id/bill_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Location"
                    android:padding="10dp"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="40dp">

                <com.annam.annamownernew.customfonts.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                 android:gravity="right|center"
                    android:text="Date"
                          android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.annam.annamownernew.customfonts.MyTextView
                    android:id="@+id/bill_date"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Date"
                    android:padding="10dp"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="40dp">

                <com.annam.annamownernew.customfonts.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                 android:gravity="right|center"
                    android:text="Machine Type"
                          android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.annam.annamownernew.customfonts.MyTextView
                    android:id="@+id/bill_machinetype"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Machine Type"
                    android:padding="10dp"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="40dp">

                <com.annam.annamownernew.customfonts.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                 android:gravity="right|center"
                    android:text="Machine Name"
                          android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.annam.annamownernew.customfonts.MyTextView
                    android:id="@+id/bill_machinename"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Machine Name"
                    android:padding="10dp"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="40dp">

                <com.annam.annamownernew.customfonts.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                 android:gravity="right|center"
                    android:text="Farmer Name"
                          android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.annam.annamownernew.customfonts.MyTextView
                    android:id="@+id/bill_ownername"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:padding="10dp"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="40dp">

                <com.annam.annamownernew.customfonts.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                 android:gravity="right|center"
                    android:text="Farmer Phone"
                          android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.annam.annamownernew.customfonts.MyTextView
                    android:id="@+id/bill_ownerphone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone"
                    android:padding="10dp"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="40dp">

                <com.annam.annamownernew.customfonts.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                 android:gravity="right|center"
                    android:text="Day"
                          android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.annam.annamownernew.customfonts.MyTextView
                    android:id="@+id/bill_day"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Day"
                    android:padding="10dp"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="40dp">

                <com.annam.annamownernew.customfonts.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                 android:gravity="right|center"
                    android:text="Rate"
                          android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.annam.annamownernew.customfonts.MyTextView
                    android:id="@+id/bill_rate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Rate"
                    android:padding="10dp"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="40dp">

                <com.annam.annamownernew.customfonts.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                 android:gravity="right|center"
                    android:text="Total Time"
                          android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.annam.annamownernew.customfonts.MyTextView
                    android:id="@+id/bill_exptime"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Time"
                    android:padding="10dp"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="40dp">

                <com.annam.annamownernew.customfonts.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                 android:gravity="right|center"
                    android:text="Additional Time"
                          android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.annam.annamownernew.customfonts.MyTextView
                    android:id="@+id/bill_additionaltime"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Time"
                    android:padding="10dp"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="40dp">

                <com.annam.annamownernew.customfonts.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                 android:gravity="right|center"
                    android:text="Total Amount"
                          android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.annam.annamownernew.customfonts.MyTextView
                    android:id="@+id/bill_total_amount"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Total Amount"
                    android:padding="10dp"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="40dp">

                <com.annam.annamownernew.customfonts.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                 android:gravity="right|center"
                    android:text="Advance Pay"
                          android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.annam.annamownernew.customfonts.MyTextView
                    android:id="@+id/bill_advancepay"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Advance Pay"
                    android:padding="10dp"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
         android:gravity="right|center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/bill_btnokay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                   style="@style/Base.Widget.AppCompat.Button.Colored"
                 android:gravity="center"
                    android:text="OK" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</ScrollView>