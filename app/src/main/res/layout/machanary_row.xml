        <android.support.v7.widget.CardView
            android:layout_width="match_parent"

            android:padding="5sp"
            android:layout_margin="3dp"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">



            <ImageView
                android:layout_width="23dp"
                android:scaleType="fitCenter"
                android:src="@drawable/edit_machine"
android:id="@+id/edit_image"
                android:layout_gravity="end|bottom"
                android:layout_margin="10dp"
                android:layout_height="23dp" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:padding="2dp"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="200dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/logo"
                        android:layout_gravity="center"
                        android:id="@+id/item_icon"
                        android:layout_height="200dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.annam.annamownernew.customfonts.MyTextView
                        android:id="@+id/machine_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
android:layout_margin="3dp"
                        android:text="Basic Hair Cut"
                        android:textColor="@color/text"
                        android:textSize="15sp" />

                    <com.annam.annamownernew.customfonts.MyTextView
                        android:id="@+id/machine_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_margin="3dp"
                        android:gravity="center|left"
                        android:text="$ 25"
                        android:textColor="@color/text" />

                    <com.annam.annamownernew.customfonts.MyTextView
                        android:id="@+id/machine_avail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"

                        android:maxLines="2"
                        android:text="Trimming, Split removal"
                        android:textColor="@color/red"

                        />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_margin="2dp"
                        android:gravity="right"
                        android:padding="2dp"
                        android:visibility="gone">

                        <Button
                            android:id="@+id/button_delete"

                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_gravity="end|right"
                            android:background="#aa76b10f"

                            android:text="DELETE" />


                        <Button
                            android:id="@+id/button_edit"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="70dp"
                            android:layout_height="30dp"

                            android:layout_gravity="end|right"
                            android:background="#32a17e32"

                            android:text="EDIT" />
                    </LinearLayout>


                </LinearLayout>



