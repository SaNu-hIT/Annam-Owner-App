<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"

        android:padding="5sp"
        android:layout_margin="3dp"
        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:padding="2dp"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:scaleType="fitCenter"

                    android:id="@+id/item_icon"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <com.annam.annamownernew.customfonts.MyTextView
                    android:id="@+id/machine_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Basic Hair Cut"
                    android:textSize="15sp"
                    android:textColor="@color/text"
                    />
                <com.annam.annamownernew.customfonts.MyTextView
                    android:id="@+id/machine_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="$ 25"

                    android:gravity="center|left"
                    android:textColor="@color/text"
                    android:layout_marginTop="6dp"
                    />

                <com.annam.annamownernew.customfonts.MyTextView
                    android:id="@+id/machine_avail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Trimming, Split removal"

                    android:textColor="@color/text"
                    android:layout_marginTop="6dp"
                    android:maxLines="2"

                    />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:padding="2dp"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_margin="2dp"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button_delete"

                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_gravity="end|right"
                        android:background="#aa76b10f"
                        style="@style/Widget.AppCompat.Button.Colored"

                        android:text="DELETE"
                        />


                    <Button
                        android:id="@+id/button_edit"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="70dp"
                        android:background="#32a17e32"
                        android:layout_height="30dp"
                        android:layout_gravity="end|right"

                        android:text="EDIT"
                        />
                </LinearLayout>


            </LinearLayout>



